{
  "manifest_version": 3,
  "name": "Link Pad",
  "version": "0.4.4",
  "default_locale": "en_US",
  "description": "Netscape Link Pad clone",
  "action": {
    "default_icon": "icon.png",
    "default_title": "Link Pad",
    "default_popup": "popup.html"
  },
  "commands": {
    "documentAdd": {
      "description": "Save current page to Link Pad"
    },
    "documentAddClose": {
      "description": "Save current page to Link Pad and close tab"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "app_icon_128.png",
    "16": "app_icon_16.png",
    "32": "app_icon_32.png",
    "48": "app_icon_48.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "contextMenus",
    "bookmarks",
    "storage",
    "favicon",
    "activeTab"
  ]
}
